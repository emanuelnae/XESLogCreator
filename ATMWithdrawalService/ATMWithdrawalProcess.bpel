<bpel:process name="ATMWithdrawalProcess"
         targetNamespace="http://atmwithdrawalservice"
         suppressJoinFailure="yes"
         xmlns:tns="http://atmwithdrawalservice"
         xmlns:bpel="http://docs.oasis-open.org/wsbpel/2.0/process/executable"
         >

    <!-- Import the client WSDL -->
	<bpel:import location="ATMWithdrawalProcessArtifacts.wsdl" namespace="http://atmwithdrawalservice" 
	        importType="http://schemas.xmlsoap.org/wsdl/" />
         
    <!-- ================================================================= -->         
    <!-- PARTNERLINKS                                                      -->
    <!-- List of services participating in this BPEL process               -->
    <!-- ================================================================= -->         
    <bpel:partnerLinks>
        <!-- The 'client' role represents the requester of this service. -->
        <bpel:partnerLink name="client"
                     partnerLinkType="tns:ATMWithdrawalProcess"
                     myRole="ATMWithdrawalProcessProvider"
                     />
    </bpel:partnerLinks>
  
    <!-- ================================================================= -->         
    <!-- VARIABLES                                                         -->
    <!-- List of messages and XML documents used within this BPEL process  -->
    <!-- ================================================================= -->         
    <bpel:variables>
        <!-- Reference to the message passed as input during initiation -->
        <bpel:variable name="input"
                  messageType="tns:ATMWithdrawalProcessRequestMessage"/>
                  
        <!-- 
          Reference to the message that will be returned to the requester
          -->
        <bpel:variable name="output"
                  messageType="tns:ATMWithdrawalProcessResponseMessage"/>
        
        
    </bpel:variables>

    <!-- ================================================================= -->         
    <!-- ORCHESTRATION LOGIC                                               -->
    <!-- Set of activities coordinating the flow of messages across the    -->
    <!-- services integrated within this business process                  -->
    <!-- ================================================================= -->         
    <bpel:sequence name="WithdrawRequest">
        
        <!-- Receive input from requester. 
             Note: This maps to operation defined in ATMWithdrawalProcess.wsdl 
             -->
        <bpel:receive name="InputPINandAmount" partnerLink="client"
                 portType="tns:ATMWithdrawalProcess"
                 operation="process" createInstance="yes" variable="input"/>
        
        
        <!-- Generate reply to synchronous request -->
        
        <bpel:if name="CheckPIN">
            <bpel:condition expressionLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[$input.payload/tns:PIN=0000]]></bpel:condition>
            <bpel:sequence name="CorrectPIN">
                
                <bpel:if name="CheckAmount">
                    <bpel:condition expressionLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[$input.payload/tns:Amount<=1000]]></bpel:condition>
                    <bpel:sequence name="AmountOk">
                        
                        <bpel:assign validate="no" name="Assign">
                            <bpel:copy ignoreMissingFromData="yes">
                                <bpel:from>
                                    <bpel:literal xml:space="preserve">Withdrawal successful!</bpel:literal>
                                </bpel:from>
                                <bpel:to variable="output" part="payload"></bpel:to>
                            </bpel:copy>
                            
                        </bpel:assign>
                        
                        
                        <bpel:reply name="ReplyToClient" partnerLink="client" portType="tns:ATMWithdrawalProcess" operation="process" variable="output"/>
                    </bpel:sequence>
                    <bpel:else>
                        <bpel:sequence name="AmountExceeded">
                            
                            <bpel:assign validate="no" name="Assign2">
                                <bpel:copy ignoreMissingFromData="yes">
                                    <bpel:from>
                                        <bpel:literal xml:space="preserve">Amount exceeded! Good bye!</bpel:literal>
                                    </bpel:from>
                                    <bpel:to part="payload" variable="output">
                                    </bpel:to>
                                </bpel:copy>
                            </bpel:assign>
                            <bpel:reply name="ReplyToClient" partnerLink="client" operation="process" variable="output"></bpel:reply>
                            
                        </bpel:sequence>
                    </bpel:else>
                </bpel:if>
            </bpel:sequence>
            <bpel:else>
                <bpel:sequence name="IncorrectPIN">
                    
                    
                    
                    <bpel:assign validate="no" name="Assign1">
                        <bpel:copy ignoreMissingFromData="yes">
                            <bpel:from>
                                <bpel:literal xml:space="preserve">Incorrect PIN! Good bye!</bpel:literal>
                            </bpel:from>
                            <bpel:to part="payload" variable="output">
                            </bpel:to>
                        </bpel:copy>
                    </bpel:assign>
                    <bpel:reply name="ReplyToClient" partnerLink="client" operation="process" variable="output"></bpel:reply>
                    
                </bpel:sequence>
            </bpel:else>
        </bpel:if>
        
        
    </bpel:sequence>
</bpel:process>

